{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <div class="main-div-crud-list">

        <h1>Team index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.name }}</td>
                    <td>
                        <a class="btn btn-outline-secondary" href="{{ path('team_show', {'id': team.id}) }}">Show</a>
                        <a class="btn btn-outline-primary" href="{{ path('team_edit', {'id': team.id}) }}">Edit</a>
                        {#<a class="btn btn-outline-primary" href="{{ path('team_add', {'id': team.id}) }}">Add </a>#}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-success" href="{{ path('team_new') }}">Create new</a>
    </div>
{% endblock %}