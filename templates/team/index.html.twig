{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>Team index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for team in teams %}
                <tr>
                    <td>{{ team.id }}</td>
                    <td>{{ team.name }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('team_show', {'id': team.id}) }}">show</a>
                        <a class="btn btn-outline-secondary" href="{{ path('team_edit', {'id': team.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-success" href="{{ path('team_new') }}">Create new</a>
    </div>
{% endblock %}