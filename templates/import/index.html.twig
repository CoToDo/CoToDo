{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }}!{% endblock %}

{% block body %}

    <div class="table-responsive" id="div-import">
        <h1>Import todo.txt file</h1>
        <div class="div-import-part">
            <h3>File upload</h3>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            {{ form_end(form) }}
        </div>
        <div class="div-import-part">
            <h3>Upload and Edit TXT File</h3>
            <form action="{{ path('import_text') }}" method="post">
                <label for="file">Plain text file (txt)</label><br/>
                <input id="file" type='file' accept='text/plain' onchange='openFile(event)'/>
                <textarea id="importTextArea" name="txtFileData"></textArea>
                <input type="submit" value="Import" class="btn btn-large btn-primary"/>
            </form>
        </div>
    </div>
{% endblock %}
