{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>Project</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ project.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ project.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ project.description }}</td>
                </tr>
                <tr>
                    <th>CreateDate</th>
                    <td>{{ project.createDate ? project.createDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a class="btn btn-outline-primary" href="{{ path('project_index') }}">back to list</a>

        <a class="btn btn-outline-primary" href="{{ path('project_edit', {'id': project.id}) }}">edit</a>

        {{ include('project/_delete_form.html.twig') }}
    </div>
{% endblock %}