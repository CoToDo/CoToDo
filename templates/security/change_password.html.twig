{% extends 'base.html.twig' %}

{% block title %}Edit user{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>Change password</h1>
        {{ form_start(form) }}

        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    {{ form_label(form.oldPassword) }}
                    {{ form_widget(form.oldPassword) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="form-row">
                <div class="col">
                    {{ form_label(form.newPassword.first) }}
                    {{ form_widget(form.newPassword.first) }}
                </div>
            </div>
            <div class="form-row">
                <div class="col">
                    {{ form_label(form.newPassword.second) }}
                    {{ form_widget(form.newPassword.second) }}
                </div>
            </div>
        </div>
        
        
        <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button>
        {{ form_end(form) }}



    </div>
{% endblock %}