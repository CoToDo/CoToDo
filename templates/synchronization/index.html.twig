{% extends 'base.html.twig' %}

{% block title %}Synchronization{% endblock %}

{% block body %}
<div class="example-wrapper"></div>
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>Google drive synchronization</h1>

            {% for message in app.flashes('info') %}
                <div class="flash-notice alert alert-warning">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="form-group">
                <a class="btn btn-dark" href="{{ path('sync_export') }}">Export</a>
                <a class="btn btn-dark" href="{{ path('sync_import') }}">Import</a>
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" for="exampleCheck1">Automatic synchronization</label>
            </div>
            <div class="form-group">
                <a class="btn btn-dark" href="{{ path('sync_auto') }}">Save</a>
            </div>
        </div>
    </div>

{% endblock %}
