{% extends 'base.html.twig' %}

{% block title %} {{ controller_name }}!{% endblock %}

{% block body %}
    <div class="main-div-crud-list">

        <h1>Timeline v1.0</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Priority</th>
                <th>Create date</th>
                <th>Completion date</th>
                <th>Deadline</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for task in tasks %}
                <tr class='clickable-row' data-href="{{ path('project_task_show', {'idp' : task.project.id, 'id': task.id}) }}">
                    <td>{{ task.name }}</td>
                    <td>{{ task.priority }}</td>
                    <td>{{ task.createDate ? task.createDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ task.completionDate ? task.completionDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ task.deadline ? task.deadline|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-success" href="#">Comment</a>

                        {% if not task.work(user).startSet %}
                            <a class="btn btn-outline-dark" href="{{ path('work_set_start', {'id' : task.workId(user)} ) }}">Start</a>
                        {% endif %}

                        {% if task.work(user).startSet and not task.work(user).endSet%}
                            <a class="btn btn-outline-dark" href="{{ path('work_set_end', {'id' : task.workId(user)} ) }}">Finished</a>
                        {% endif %}


                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
