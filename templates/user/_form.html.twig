{{ form_start(form) }}
    {{ form_errors(form) }}

    <div class="form-row form-group">
        <div class="col">
            {{ form_label(form.name, null, {'label_attr': {'class': 'col-form-label'}} )}}
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
        <div class="col">
            {{ form_label(form.lastName, null, {'label_attr': {'class': 'col-form-label'}} ) }}
            {{ form_errors(form.lastName) }}
            {{ form_widget(form.lastName) }}
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col">
                {{ form_label(form.mail) }}
                {{ form_errors(form.mail) }}
                {{ form_widget(form.mail) }}
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="form-row">
            <div class="col">
                {{ form_label(form.currentPassword) }}
                {{ form_widget(form.currentPassword) }}
            </div>
        </div>
    </div>

    <div class="form-group">
        <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button>
    </div>
{{ form_end(form) }}