{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1>User</h1>
            <div class="table-responsive">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td>{{ userIn.name }}</td>
                        </tr>
                        <tr>
                            <th>Last name</th>
                            <td>{{ userIn.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ userIn.mail }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            {% if userIn.equals(userRole) %}
                <a class="btn btn-outline-primary"  href="{{ path('user_edit', {'id': userIn.id}) }}">Edit</a>
                <a class="btn btn-outline-primary"  href="{{ path('change_password') }}">Change password</a>

                {{ include('user/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
{% endblock %}