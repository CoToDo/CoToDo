{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>User</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Last name</th>
                    <td>{{ user.lastName }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.mail }}</td>
                </tr>

            </tbody>
        </table>

        <a class="btn btn-outline-secondary" href="{{ path('user_index') }}">Back to list</a>

        <a class="btn btn-outline-primary"  href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}