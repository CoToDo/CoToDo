{% extends 'base.html.twig' %}

{% block title %}Role index{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>Role index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Type</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for role in roles %}
                <tr>
                    <td>{{ role.id }}</td>
                    <td>{{ role.type }}</td>
                    <td>
                        <a class="btn btn-outline-primary" href="{{ path('role_show', {'id': role.id}) }}">show</a>
                        <a class="btn btn-outline-secondary" href="{{ path('role_edit', {'id': role.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-outline-success" href="{{ path('role_new') }}">Create new</a>
    </div>
{% endblock %}