{% extends 'home.html.twig' %}

{% block title %}CoToDo{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/landing.css') }}">
{% endblock %}


{% block body %}
    <div class="container">
        <div class="row align-items-center">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                            <img src="{{ asset('LogoFinal.svg') }}" alt="CoToDo logo"/>
                            <p class="landing-description">Collaborative task manager</p>
                    </div>
                    <div class="col-md-4">
                        <img src="{{ asset('icon.svg') }}" alt="CoToDo icon" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="row justify-content-center">
                            <a class="btn btn-dark" href="{{ path('login') }}">Login</a>
                            <a class="btn btn-dark" href="{{ path('registration') }}">Registration</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
