            {{ form_label(form.deadline, null, {'label_attr': {'class': 'col-form-label'}} ) }}
            {{ form_errors(form.deadline) }}
            {{ form_widget(form.deadline) }}
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            {{ form_label(form.tags) }}
            {{ form_errors(form.tags) }}
            {{ form_widget(form.tags) }}
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            {{ form_label(form.works) }}
            {{ form_errors(form.works) }}
            {{ form_widget(form.works) }}
        </div>
    </div>
    <div class="form-row form-group">
        <div class="col">
            {{ form_label(form.comments) }}
            {{ form_errors(form.comments) }}
            {{ form_widget(form.comments) }}
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-outline-success">{{ button_label|default('Save') }}</button>
    </div>
