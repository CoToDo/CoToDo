{% extends 'base.html.twig' %}

{% block title %}Task{% endblock %}

{% block body %}
    <div class="main-div-crud">

        <h1>Task</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Name</th>
                    <td>{{ task.name }}</td>
                </tr>
                <tr>
                    <th>Priority</th>
                    <td>{{ task.priority }}</td>
                </tr>
                <tr>
                    <th>Create date</th>
                    <td>{{ task.createDate ? task.createDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Completion date</th>
                    <td>{{ task.completionDate ? task.completionDate|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Deadline</th>
                    <td>{{ task.deadline ? task.deadline|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Tags</th>
                    <td>
                        {% for tag in task.tags %}
                            {{ tag.name }}
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>

        <h3>Works</h3>

        <table class="table">
            <thead>
            <tr>
                <th>Worker</th>
                <th>Description</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for work in task.works %}
                <tr>
                    <td>{{ work.user }}</td>
                    <td>{{ work.description }}</td>
                    <td>{{ work.startDate ? work.startDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ work.endDate ? work.endDate|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a class="btn btn-outline-secondary" href="{{ path('work_show', {'id': work.id}) }}">Show</a>
                        <a class="btn btn-outline-primary" href="{{ path('work_edit', {'id': work.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>


        <a class="btn btn-outline-secondary" href="{{ path('project_task_index', {'id': project.id}) }}">Back to list</a>
        <a class="btn btn-outline-primary" href="{{ path('project_task_edit', {'idp': project.id, 'id': task.id}) }}">Edit</a>
        <a class="btn btn-outline-warning" href="{{ path('work_new', {'id': task.id}) }}">Assign</a>

        {{ include('task/_delete_form.html.twig') }}
    </div>
{% endblock %}